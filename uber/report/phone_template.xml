<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <template id="report_phone">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h3> -- Detail -- </h3>
                        <p>Name is : <span t-field="o.name"/></p>
                        <p>Price is : <span t-field="o.price"/></p>
                        <p>File name is : <span t-field="o.file_name"/></p>
                        <p>Image is :
                            <span t-field="o.image" t-field-options='{"widget": "image"}'/>
                        </p>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>

